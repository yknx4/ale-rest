{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "https://www.ale.world/schemas/post",
    "title": "Post",
    "type": "object",
    "tableName": "posts",
    "additionalProperties": false,
    "description": "A blog post",
    "primaryKey": "id",
    "properties": {
        "id": {
            "$ref": "#/definitions/positiveInt"
        },
        "title": {
            "x-faker": "lorem.sentence",
            "type": "string"
        },
        "content": {
            "x-faker": "lorem.paragraph",
            "type": "string"
        },
        "description": {
            "x-faker": "lorem.paragraph",
            "type": "string"
        },
        "legacyPermalink": {
            "x-faker": "internet.url",
            "type": "string",
            "format": "url"
        },
        "userId": {
            "$ref": "#/definitions/positiveInt"
        },
        "createdAt": {
            "type": "string",
            "format": "date-time",
            "x-faker": "date.past"
        },
        "updatedAt": {
            "type": "string",
            "format": "date-time",
            "x-faker": "date.future"
        }
    },
    "required": [
        "content",
        "description",
        "userId",
        "title"
    ],
    "definitions": {
        "positiveInt": {
            "type": "integer",
            "minimum": 0,
            "exclusiveMinimum": true
        }
    },
    "x-relationships": {
        "user": {
            "relation": "BelongsToOneRelation",
            "modelClass": "User",
            "join": {
                "from": "posts.user_id",
                "to": "users.id"
            }
        }
    }
}